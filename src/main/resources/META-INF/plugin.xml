<idea-plugin>
    <id>hu.szte.raymonddrakon.charmfl</id>
    <name>CharmFL</name>
    <vendor>SZTE</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <group id="CharmFl.MainMenu" text="CharmFL" description="CharmFL Menu">
            <add-to-group group-id="MainMenu" anchor="last" />
            <action id="CharmFl.Run" class="actions.PluginTestRun" text="Run" description="Run test" icon="menu-icons/run.png" />
            <action id="CharmFl.Clear" class="actions.PluginTestClear" text="Clear" description="Clear test" icon="menu-icons/clear.png" />
            <action id="CharmFl.View" class="actions.PluginTestView" text="View" description="View results" icon="menu-icons/view.png" />
            <separator></separator>
<!--            <action id="CharmFl.TurnColoringOn" class="actions.PluginColoringTurnOn" text="Turn Coloring On" description="Turn Coloring On" icon="menu-icons/turn-on.png" />-->
<!--            <action id="CharmFl.TurnColoringOff" class="actions.PluginColoringTurnOff" text="Turn Coloring Off" description="Turn Coloring Off" icon="menu-icons/turn-off.png" />-->
        </group>
    </actions>
</idea-plugin>